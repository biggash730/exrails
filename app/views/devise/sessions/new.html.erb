<div class="col-sm-6 col-sm-offset-3 login-box-margin">
  <div class="flat-ui login">
    <div class="login-screen">
      <div class="login-icon">
        <img src="<%= asset_path('illustrations/' + ['bag', 'book', 'calendar', 'clipboard', 'colors', 'compass', 'gift', 'mail', 'map', 'news', 'paper', 'settings', 'share', 'time'].sample + '.png') %>" alt="eXRails">
        <h4>Welcome to <small>eXRails App</small></h4>
      </div>
      <div class="login-form">
        <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "form-horizontal" }) do |f| %>
          <div class="form-group">
            <label for="user_username" class="col-sm-4 control-label">Username</label>
            <div class="col-sm-offset-4- col-sm-8">
              <div class="input-group">
                <span class="input-group-addon">
                  <span class="glyphicon glyphicon-user"></span>
                </span>
                <input type="text" name="user[username]" class="form-control" id="user_username" placeholder="Username" autofocus="true">
              </div>
            </div>
          </div>
          <div class="form-group">
            <label for="user_password" class="col-sm-4 control-label">Password</label>
            <div class="col-sm-offset-4- col-sm-8">
              <div class="input-group">
                <span class="input-group-addon">
                  <span class="glyphicon glyphicon-lock"></span>
                </span>
                <input type="password" name="user[password]" class="form-control" id="user_password" placeholder="Password">
              </div>
            </div>
          </div>
          <div class="form-group" ng-hide="true">
            <div class="col-sm-offset-4 col-sm-8">
              <div class="checkbox">
                <label>
                  <input type="checkbox" name="user[remember_me]"> Remember me
                </label>
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-offset-4 col-sm-12">
              <button type="submit" class="btn btn-default">Sign in</button>
            </div>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>