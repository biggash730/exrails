<div class="panel panel-default ex-form">
  <div class="panel-heading">
    <h3 class="panel-title">Search {{ model.display }}</h3>
  </div>
  <div class="panel-body">
    <ex-query ng-model="query" columns="columns" lookups="lookups">
    </ex-query>
  </div>
  <div class="panel-footer">
    <button class="btn btn-default btn-sm" ng-click="close()">
      <span class="glyphicon glyphicon-remove"></span>
      Close
    </button>
    <button class="btn btn-info btn-sm" ng-click="search()">
      <span class="glyphicon glyphicon-search"></span>
      Search
    </button>
  </div>
</div>