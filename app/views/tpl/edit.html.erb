<div class="panel panel-default ex-form">
  <div class="panel-heading">
    <button type="button" class="close" ng-click="cancel()">
      <span class="glyphicon glyphicon-remove"></span>
    </button>
    <h3 class="panel-title">Edit {{ model.display }}</h3>
  </div>
  <div class="panel-body">
    <ex-form ng-model="record" columns="formColumns" lookups="lookups">
    </ex-form>
  </div>
  <div class="panel-footer">
    <button class="btn btn-default btn-sm" ng-click="cancel()">
      <span class="glyphicon glyphicon-remove"></span>
      Cancel
    </button>
    <button class="btn btn-info btn-sm" ng-click="update()">
      <span class="glyphicon glyphicon-ok"></span>
      Update
    </button>
  </div>
</div>